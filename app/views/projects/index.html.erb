<h1>Listing projects</h1>
<%= link_to 'New project', new_project_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>
  <% @projects.each do |project| %>
    <tr>
      <td>
        <%= project.title %>
      </td>
      <td>
        <%= project.description %>
      </td>
      <td>
        <%= link_to 'Show', project_path(project) %>
      </td>
        <td>
          <%= link_to 'Edit', edit_project_path(project) %>
        </td>
        <td>
          <%= link_to "Destroy project", project_path(project), method: :delete, data: { confirm: 'Czy chcesz usunac?'} %>
          
        </td>

    </tr>
  <% end %>
</table>
